<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.kotlin.android.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加法"
        android:onClick="startActivity"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/num_a" />

    <EditText
        android:id="@+id/num_a"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-1dp" />

    <EditText
        android:id="@+id/num_b"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteY="-1dp"
        app:layout_constraintLeft_toRightOf="@+id/num_a"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="减法"
        app:layout_constraintLeft_toRightOf="@+id/btn_add"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/num_a" />

    <Button
        android:id="@+id/btn_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乘法"
        app:layout_constraintLeft_toRightOf="@+id/btn_sub"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/num_b" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="除法"
        app:layout_constraintLeft_toRightOf="@+id/btn_pro"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/num_b" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="353dp"
        android:layout_height="38dp"
        android:text="TextView"
        android:gravity="center"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_add" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录界面"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_num" />
</android.support.constraint.ConstraintLayout>
